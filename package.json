{
  "name": "krait",
  "version": "0.4.1",
  "description": "A command line MIDI looper",
  "main": "./src/main.js",
  "scripts": {
    "start": "node ./src/main.js",
    "hotdev": "nodemon -I node ./src/main.js",
    "debug": "tail -f ./.kraitlog",
    "version": "node scripts/bump-version.js --current",
    "bump:patch": "node scripts/bump-version.js patch",
    "bump:minor": "node scripts/bump-version.js minor",
    "bump:major": "node scripts/bump-version.js major",
    "release:patch": "node scripts/bump-version.js patch --commit --push",
    "release:minor": "node scripts/bump-version.js minor --commit --push",
    "release:major": "node scripts/bump-version.js major --commit --push"
  },
  "bin": {
    "krait": "./src/main.js"
  },
  "author": "Levi Beach",
  "license": "MIT",
  "dependencies": {
    "blessed": "^0.1.81",
    "midi": "^2.0.0",
    "nodemon": "^3.1.7"
  }
}
